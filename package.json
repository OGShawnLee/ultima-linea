{
	"name": "ultima-linea",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check .",
		"format": "prettier --write .",
		"migrate": "edgedb migration create && edgedb migration apply && pnpm run generate",
		"generate": "npx @edgedb/generate edgeql-js --output-dir src/lib/edgeql-js && npx @edgedb/generate interfaces --file src/lib/interfaces.ts",
		"start": "edgedb instance start -I ultima-linea",
		"stop": "edgedb instance stop -I ultima-linea"
	},
	"devDependencies": {
		"@edgedb/generate": "^0.5.6",
		"@melt-ui/svelte": "^0.84.0",
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^3.0.0",
		"@tiptap/core": "^2.8.0",
		"@tiptap/extension-blockquote": "^2.8.0",
		"@tiptap/extension-bold": "^2.8.0",
		"@tiptap/extension-bullet-list": "^2.8.0",
		"@tiptap/extension-document": "^2.8.0",
		"@tiptap/extension-heading": "^2.8.0",
		"@tiptap/extension-history": "^2.8.0",
		"@tiptap/extension-italic": "^2.8.0",
		"@tiptap/extension-list-item": "^2.8.0",
		"@tiptap/extension-ordered-list": "^2.8.0",
		"@tiptap/extension-paragraph": "^2.8.0",
		"@tiptap/extension-placeholder": "^2.8.0",
		"@tiptap/extension-strike": "^2.8.0",
		"@tiptap/extension-text": "^2.8.0",
		"@tiptap/extension-underline": "^2.8.0",
		"@types/bcrypt": "^5.0.2",
		"@types/jsonwebtoken": "^9.0.7",
		"@unocss/reset": "^0.63.4",
		"bcrypt": "^5.1.1",
		"bits-ui": "^0.21.16",
		"edgedb": "^1.5.12",
		"formsnap": "^1.0.1",
		"jsonwebtoken": "^9.0.2",
		"lucide-svelte": "^0.452.0",
		"mode-watcher": "^0.4.1",
		"prettier": "^3.1.1",
		"prettier-plugin-svelte": "^3.1.2",
		"svelte": "^4.2.7",
		"svelte-check": "^4.0.0",
		"sveltekit-superforms": "^2.19.1",
		"typescript": "^5.0.0",
		"unocss": "^0.63.4",
		"uploadthing": "^7.1.0",
		"valibot": "^0.42.1",
		"vite": "^5.0.3"
	},
	"type": "module"
}
